<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dan.langford.tableflipper.ui.SceneController">
   <children>
      <BorderPane layoutX="1.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER" useSystemMenuBar="true" fx:id="menuBar">
               <menus>
                  <Menu mnemonicParsing="false" text="File">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Edit">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
         </top>
         <left>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="filter" onAction="#handleAction" onKeyTyped="#handleKeyTyped" promptText="filter" />
                   <ListView fx:id="tableList" onMouseClicked="#handleClick" VBox.vgrow="ALWAYS" />
                  <!--<TreeView fx:id="tableTree" prefHeight="200.0" prefWidth="200.0" />-->
               </children>
            </VBox>
         </left>
         <center>
                <TextArea fx:id="tableResults" promptText="table roll results will appear here" wrapText="true" BorderPane.alignment="CENTER" />
         </center>
         <right>
            <Label text="notes" wrapText="true" BorderPane.alignment="TOP_LEFT" />
         </right>
         <bottom>
            <Label fx:id="jVersionLabel" text="jVersionLabel" wrapText="true" BorderPane.alignment="CENTER_LEFT" />
         </bottom>
      </BorderPane>
   </children>
</Pane>
